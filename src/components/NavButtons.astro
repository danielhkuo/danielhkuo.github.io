---
// NavButtons.astro - Navigation buttons component
import CarbonSocialLinks from "./CarbonSocialLinks.svelte";
---

<div
  class="info-row flex flex-col sm:flex-row flex-wrap justify-center items-center gap-x-8 gap-y-4 py-8"
>
  <a
    class="info-button group relative text-text no-underline text-center cursor-pointer transition-colors duration-300 font-serif-heading text-lg py-2 hover:text-primary"
    href="mailto:danielhkuo@rice.edu"
  >
    Contact Me
    <span
      class="absolute bottom-0 left-0 w-full h-[2px] bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
    ></span>
  </a>

  <a
    class="info-button group relative text-text no-underline text-center cursor-pointer transition-colors duration-300 font-serif-heading text-lg py-2 hover:text-primary"
    href="/resume/Daniel-Kuo-Resume.pdf"
    target="_blank"
  >
    Resume
    <span
      class="absolute bottom-0 left-0 w-full h-[2px] bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
    ></span>
  </a>

  <a
    class="info-button group relative text-text no-underline text-center cursor-pointer transition-colors duration-300 font-serif-heading text-lg py-2 hover:text-primary"
    href="#about-modal"
  >
    About Me
    <span
      class="absolute bottom-0 left-0 w-full h-[2px] bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
    ></span>
  </a>
</div>

<!-- Social Media Row - Carbon Components -->
<CarbonSocialLinks client:load />
